{
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    "editor.fontFamily": "'FiraCode-Retina', 'MesloLGS NF', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "workbench.colorTheme": "Default Light+",
    "workbench.iconTheme": "file-icons",
    "editor.lineNumbers": "relative",
    "editor.cursorBlinking": "solid",
    "editor.minimap.enabled": false,

    // vim mode keybindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-e>"],
            "after": ["5", "<C-e>"],
        },
        {
            "before": ["<C-y>"],
            "after": ["5", "<C-y>"],
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-w>", "h"],
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-w>", "j"],
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-w>", "k"],
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-w>", "l"],
        },
        {
            "before": ["<Leader>", "q", "\""],
            "after": ["c", "i", "w", "\"", "\"", "<Esc>", "P"],
        },
        {
            "before": ["<Leader>", "q", "'"],
            "after": ["c", "i", "w", "'", "'", "<Esc>", "P"],
        },
        {
            "before": ["<Leader>", "q", "("],
            "after": ["c", "i", "w", "(", ")", "<Esc>", "P"],
        },
        {
            "before": ["<Leader>", "q", ")"],
            "after": ["c", "i", "w", "(", ")", "<Esc>", "P"],
        },
    ],

    // LaTeX Workshop
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.outDir": "latex.out",

    "gitlens.defaultDateFormat": "Do MMMM YYYY HH:mm",
    "gitlens.defaultDateShortFormat": "D MMM YYYY",
    "editor.suggestSelection": "first",
    "workbench.startupEditor": "newUntitledFile",
    "explorer.autoReveal": false,
    "todo-tree.highlights.enabled": true,
    "editor.accessibilitySupport": "off",
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
}
