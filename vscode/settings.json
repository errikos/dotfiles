{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "editor.fontFamily": "Source Code Pro, Menlo, Fira Code",
    "editor.lineNumbers": "relative",
    "editor.rulers": [100],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.minimap.enabled": false,
    "editor.cursorBlinking": "solid",
    "workbench.startupEditor": "newUntitledFile",
    // vim mode keybindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-e>"],
            "after": ["5", "<C-e>"],
        },
        {
            "before": ["<C-y>"],
            "after": ["5", "<C-y>"],
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-w>", "h"],
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-w>", "j"],
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-w>", "k"],
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-w>", "l"],
        },
        {
            "before": ["<Leader>", "q", "\""],
            "after": ["c", "i", "w", "\"", "\"", "<Esc>", "P"],
        },
        {
            "before": ["<Leader>", "q", "'"],
            "after": ["c", "i", "w", "'", "'", "<Esc>", "P"],
        },
        {
            "before": ["<Leader>", "q", "("],
            "after": ["c", "i", "w", "(", ")", "<Esc>", "P"],
        },
        {
            "before": ["<Leader>", "q", ")"],
            "after": ["c", "i", "w", "(", ")", "<Esc>", "P"],
        },
    ],
    "latex-workshop.latex.outDir": "./out/",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-aux-directory=out",
                "-output-directory=out",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-aux-directory=out",
                "-output-directory=out",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],

    // Java
    "java.errors.incompleteClasspath.severity": "ignore",
    // Scala Language Server
    "scalaLanguageServer.logLevel" : "ERROR",
    "scalaLanguageServer.heapSize": "4G",

    "gitlens.defaultDateFormat": "Do MMMM YYYY HH:mm",
    "gitlens.defaultDateShortFormat": "D MMM YYYY",
    "latex-workshop.view.pdf.viewer": "tab",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Solarized Light",
    "workbench.iconTheme": "eq-material-theme-icons-light"
}