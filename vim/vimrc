set nocompatible              " be iMproved, required
filetype off                  " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'

" Atom colours
Plugin 'rakr/vim-one'

" airline statusline
Plugin 'vim-airline/vim-airline'

" NERDTree
Plugin 'scrooloose/nerdtree'

" git integration
Plugin 'airblade/vim-gitgutter'
Plugin 'Xuyuanp/nerdtree-git-plugin'

" comment/uncomment stuff
Plugin 'tpope/vim-commentary'

" syntax checking
Plugin 'vim-syntastic/syntastic'

" a solid language pack
Plugin 'sheerun/vim-polyglot'

" ensime for Scala
Plugin 'ensime/ensime-vim'

" code completion
Plugin 'Valloric/YouCompleteMe'

" markdown preview
Plugin 'JamshedVesuna/vim-markdown-preview'

" Snippets
Plugin 'SirVer/ultisnips'    " track the engine
Plugin 'honza/vim-snippets'  " get the snippets

" All of your Plugins must be added before the following line
call vundle#end()            " required
filetype plugin indent on    " required

set runtimepath+=~/.vim_config
so ~/.vim_config/colours.vim
so ~/.vim_config/ui.vim
so ~/.vim_config/bindings.vim
so ~/.vim_config/editor.vim
so ~/.vim_config/plugins.vim
