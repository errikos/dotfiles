set nocompatible              " be iMproved, required
filetype off                  " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'
Plugin 'neoclide/coc.nvim', {'branch': 'release'}

" Colour schemes
Plugin 'lifepillar/vim-solarized8'
Plugin 'dracula/vim'
Plugin 'rakr/vim-one'
Plugin 'stillwwater/vim-nebula'
Plugin 'arzg/vim-colors-xcode'
Plugin 'ayu-theme/ayu-vim'

" airline statusline
Plugin 'vim-airline/vim-airline'
Plugin 'vim-airline/vim-airline-themes'

" NERDTree
Plugin 'scrooloose/nerdtree'

" git integration
Plugin 'airblade/vim-gitgutter'
Plugin 'Xuyuanp/nerdtree-git-plugin'

" comment/uncomment stuff
Plugin 'tpope/vim-commentary'

" syntax checking
Plugin 'vim-syntastic/syntastic'

" a solid language pack
Plugin 'sheerun/vim-polyglot'

" code completion
" Plugin 'Valloric/YouCompleteMe'

" markdown preview
Plugin 'JamshedVesuna/vim-markdown-preview'

" Snippets
Plugin 'SirVer/ultisnips'    " track the engine
Plugin 'honza/vim-snippets'  " get the snippets

" All of your Plugins must be added before the following line
call vundle#end()            " required
filetype plugin indent on    " required

set runtimepath+=~/.vim_config
so ~/.vim_config/colours.vim
so ~/.vim_config/ui.vim
so ~/.vim_config/bindings.vim
so ~/.vim_config/editor.vim
so ~/.vim_config/plugins.vim
so ~/.vim_config/metals.vim
